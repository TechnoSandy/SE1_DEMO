<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminDashboard">



    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <Button
                android:id="@+id/UserHomeScreen_Back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Back" />

            <Button
                android:id="@+id/UserHomeScreen_Logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Logout" />


        </LinearLayout>

        <TextView
            android:id="@+id/textView21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=" Welcome User "
            android:textAlignment="center"
            android:layout_marginTop="8dp"
            android:textSize="28sp" />

        <Button
            android:id="@+id/request_rental"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Request Rental"
            android:textColorLink="@android:color/background_dark"
            tools:layout_editor_absoluteX="323dp"
            tools:layout_editor_absoluteY="129dp" />

        <Button
            android:id="@+id/view_reserved_rental"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="view reserved rental"
            android:textColorLink="@android:color/background_dark"
            tools:layout_editor_absoluteX="143dp"
            tools:layout_editor_absoluteY="266dp" />

        <Button
            android:id="@+id/view_specific_rental"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Specific Rental"
            android:textColorLink="@android:color/background_dark"
            tools:layout_editor_absoluteX="183dp"
            tools:layout_editor_absoluteY="292dp" />

        <Button
            android:id="@+id/cancel_reservation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel Reservation"
            android:textColorLink="@android:color/background_dark"
            tools:layout_editor_absoluteX="100dp"
            tools:layout_editor_absoluteY="392dp" />

        <Button
            android:id="@+id/update_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Profile"
            android:textColorLink="@android:color/background_dark"
            tools:layout_editor_absoluteX="162dp"
            tools:layout_editor_absoluteY="503dp" />


    </LinearLayout>



</android.support.constraint.ConstraintLayout>