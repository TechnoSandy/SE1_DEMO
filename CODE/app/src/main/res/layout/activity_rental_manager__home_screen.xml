<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RentalManager_HomeScreen">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/RentalManager_Back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Back" />

            <Button
                android:id="@+id/RentalManager_Logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Logout" />


        </LinearLayout>

        <TextView
            android:id="@+id/textView21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=" Welome Rental Manager "
            android:textAlignment="center"
            android:layout_marginTop="15dp"
            android:textSize="28sp" />

        <Button
            android:id="@+id/update_profile1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Profile"
            android:layout_marginTop="20dp"
            android:textColorLink="@android:color/background_dark"
             />

        <Button
            android:id="@+id/ViewSpecificRental"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Specific Rental"
            android:textColorLink="@android:color/background_dark"
             />

        <Button
            android:id="@+id/view_all_rental"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View All Rental"
            android:textColorLink="@android:color/background_dark"
           />

        <Button
            android:id="@+id/delete_user_rental"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete User Rental"
            android:textColorLink="@android:color/background_dark"
           />

        <Button
            android:id="@+id/view_available_cars"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Available Cars"
            android:textColorLink="@android:color/background_dark"
            />

        <Button
            android:id="@+id/view_calender_of_cars"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Calender Of Cars"
            android:textColorLink="@android:color/background_dark"
            />


    </LinearLayout>



</android.support.constraint.ConstraintLayout>