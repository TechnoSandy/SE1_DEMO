<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_cartype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Car Type : "
                android:textSize="20sp" />
        <TextView
            android:id="@+id/textView_cartype_ans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Economy"
            android:textSize="20sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Amount Paid : "
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/textView_amount_ans"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="75$"
                android:textSize="20sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_fromdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="From Date : "
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView_fromdate_ans"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="11/22/2018"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView_todate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="   To Date : "
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textView_todate_ans"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="11/24/2018"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_fromtime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="From Time : "
            android:layout_weight="1"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/textView_fromtime_ans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="8:00 AM"
            android:layout_weight="1"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/textView_tilltime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="               Till Time: "
            android:layout_weight="1"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/textView_tilltime_ans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="7:00 PM"
            android:textSize="14sp"/>
    </LinearLayout>


    </LinearLayout>


</android.support.constraint.ConstraintLayout>

